<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:c="urn:import:com.sencha.gxt.widget.core.client" xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
	xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">

	<ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="verticalLayoutData">
		<ui:attributes width="1" height="-1" />
	</ui:with>

	<c:FramedPanel ui:field="form" width="350">

		<form:FieldSet ui:field="fieldSet" headingText="Person" collapsible="false">
			<container:VerticalLayoutContainer>
				<container:child layoutData="{verticalLayoutData}">
					<form:FieldLabel text="Nachname">
						<form:widget>
							<form:TextField allowBlank="false" ui:field="name" />
						</form:widget>
					</form:FieldLabel>
				</container:child>
				<container:child layoutData="{verticalLayoutData}">
					<form:FieldLabel text="Vorname">
						<form:widget>
							<form:TextField allowBlank="false" ui:field="vorname" />
						</form:widget>
					</form:FieldLabel>
				</container:child>
				<container:child layoutData="{verticalLayoutData}">
					<form:FieldLabel text="Strasse">
						<form:widget>
							<form:TextField allowBlank="false" ui:field="strasse" />
						</form:widget>
					</form:FieldLabel>
				</container:child>
				<container:child layoutData="{verticalLayoutData}">
					<form:FieldLabel text="PLZ">
						<form:widget>
							<form:TextField allowBlank="false" ui:field="plz" />
						</form:widget>
					</form:FieldLabel>
				</container:child>
				<container:child layoutData="{verticalLayoutData}">
					<form:FieldLabel text="Ort">
						<form:widget>
							<form:TextField allowBlank="false" ui:field="ort" />
						</form:widget>
					</form:FieldLabel>
				</container:child>
				<container:child layoutData="{verticalLayoutData}">
					<form:FieldLabel text="Geburtsdatum">
						<form:widget>
							<form:DateField allowBlank="false" ui:field="geburtsdatum" />
						</form:widget>
					</form:FieldLabel>
				</container:child>
			</container:VerticalLayoutContainer>
		</form:FieldSet>

		<c:button>
			<button:TextButton text="Speichern" ui:field="save" />
		</c:button>
		<c:button>
			<button:TextButton text="Abbrechen" ui:field="cancel" />
		</c:button>
	</c:FramedPanel>


</ui:UiBinder>