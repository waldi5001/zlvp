<?xml version="1.0" encoding="UTF-8"?>
<!-- When updating your version of GWT, you should also update this DTD reference, so that your app can take advantage of 
	the latest GWT module capabilities. -->
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.5.1//EN"
  "http://google-web-toolkit.googlecode.com/svn/tags/2.5.1/distro-source/core/src/gwt-module.dtd">
<module rename-to='zlvp'>
	<!-- Inherit the core Web Toolkit stuff. -->
	<inherits name='com.google.gwt.user.User' />
	<inherits name="com.google.gwt.i18n.I18N" />

	<!-- German language, independent of country -->
	<extend-property name="locale" values="de" />

	<!-- German in German -->
	<extend-property name="locale" values="de_DE" />

	<set-property-fallback name="locale" value="de" />

	<!-- Inherit the default GWT style sheet. You can change -->
	<!-- the theme of your GWT application by uncommenting -->
	<!-- any one of the following lines. -->
	<!-- <inherits name='com.google.gwt.user.theme.clean.Clean' /> -->
	<inherits name='com.google.gwt.user.theme.standard.Standard' />
	<!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
	<!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/> -->

	<!-- Other module inherits -->
	<inherits name='com.sencha.gxt.ui.GXT' />
	<inherits name='com.google.gwt.editor.Editor' />

	<stylesheet src="reset.css" />

	<!-- Specify the app entry point class. -->
	<entry-point class='de.zlvp.ui.ZLVP' />

	<!-- Specify the paths for translatable code -->
	<source path='model' />
	<source path='ui' />
	<source path='control' />

</module>
